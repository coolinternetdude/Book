<%- layout("./layouts/boilerplate") %>

<div class="max-w-screen-sm mx-auto py-10 px-5">
    <h2 class="mb-10 text-center text-3xl font-extrabold leading-none tracking-tight text-gray-900 md:text-4xl lg:text-5xl dark:text-white">Register</h2>
    <div class="card">
        <form action="/register" method="POST">
            <div class="relative mb-3">
              <label for="username" class="label">Username:</label>
              <input class="input" type="text" id="username" name="user[username]" placeholder="Username" autofocus required />
            </div>
            <div class="relative mb-3">
                <label for="email" class="label">Email:</label>
                <input class="input" type="email" id="email" name="user[email]" placeholder="Email" required />
            </div>
            <div class="relative mb-3">
                <label for="password" class="label">Password:</label>
                <input class="input" type="password" id="password" name="user[password]" placeholder="Password" required />
            </div>
            <div class="mt-5">
              <button class="btn green-btn w-full" type="submit">Register</button>
            </div>
        </form>
    </div>
</div>