<div>
  <form action="/api/books/<%= foundBook._id %>?_method=PUT" method="POST">
    <div>
      <label for="name">Name:</label>
      <input
        type="text"
        id="name"
        value="<%= foundBook.name %>"
        name="book[name]"
        placeholder="Name"
        required
      />
    </div>
    <div>
      <label for="body">Body:</label>
      <textarea
        id="body"
        name="book[body]"
        placeholder="Body"
        rows="10"
        required
      > <%= foundBook.body%></textarea
      >
    </div>
    <div>
      <label for="sales">Sales:</label>
      <input
        type="number"
        name="book[sales]"
        value="<%=foundBook.sales %>"
        id="sales"
        value="0"
        min="0"
        step="1"
        required
      />
    </div>
    <div>
      <label for="genre">Genre:</label>
      <select name="book[genre]" id="genre" required>
        <% for(genre of bookGenre) { %>
        <option value="<%= genre %>" <%= genre === foundBook.genre ? "selected" : "" %> >
          <%= genre %></option>
        <% } %>
      </select>
    </div>
    <div>
      <label for="published">Published:</label>
      <input type="date" value="<%= new Date(foundBook.published).toISOString().split('T')[0] %>" name="book[published]" id="published" required />
    </div>
    <div>
      <label for="language">Language:</label>
      <select name="book[language]" id="language" required>
        <% for(language of bookLanguage) { %>
        <option value="<%= language %>" <%= language === foundBook.language ? "selected" : "" %>>
          <%= language %></option>
        <% } %>
      </select>
    </div>
    <button type="submit">Edit Book</button>
  </form>
</div>
