<% layout('./layouts//boilerplate') -%>
<div class="max-w-screen-sm mx-auto py-10 px-5">
  <h2 class="mb-10 text-center text-3xl font-extrabold leading-none tracking-tight text-gray-900 md:text-4xl lg:text-5xl dark:text-white">New Book</h2>
  <form action="/api/books/new" method="POST">
    <div class="relative mb-3">
      <label for="name" class="label">Name:</label>
      <input class="input" type="text" id="name" name="book[name]" placeholder="Name" required />
    </div>
    <div class="relative mb-3">
      <label for="body" class="label">Body:</label>
      <textarea class="input" id="body" name="book[body]" placeholder="Body" rows="6" required></textarea>
    </div>
    <div class="relative mb-3">
      <label for="sales" class="label">Sales:</label>
      <input class="input" type="number" name="book[sales]" id="sales" value="0" min="0" step="1" required />
    </div>
    <div class="relative mb-3">
      <label for="genre" class="label">Genre:</label>
      <select class="input" name="book[genre]" id="genre" required><% for(genre of bookGenre) { %> <option value="<%= genre %>"><%= genre %> </option><% } %> </select>
    </div>
    <div class="relative mb-3">
      <label for="published" class="label">Published:</label>
      <input class="input" type="date" name="book[published]" id="published" required />
    </div>
    <div class="relative mb-3">
      <label for="language" class="label">Language:</label>
      <select class="input" name="book[language]" id="language" required><% for(language of bookLanguage) { %> <option value="<%= language %>"><%= language %> </option><% } %> </select>
    </div>
    <div class="mt-5">
      <button class="btn green-btn" type="submit">Add</button>
      <a class="btn yellow-btn" href="/api/books">Cancel</a>
    </div>
  </form>
</div>